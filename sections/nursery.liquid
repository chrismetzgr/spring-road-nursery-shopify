<script>
(function() {
  const img = document.getElementById('hero-slideshow');
  if (!img) return;
  
  const slides = [
    '{{ "slide-1.png" | asset_url }}',
    '{{ "slide-2.png" | asset_url }}',
    '{{ "slide-3.png" | asset_url }}',
    '{{ "slide-4.png" | asset_url }}',
    '{{ "slide-5.png" | asset_url }}',
    '{{ "slide-6.png" | asset_url }}',
    '{{ "slide-7.png" | asset_url }}',
    '{{ "slide-8.png" | asset_url }}',
    '{{ "slide-9.png" | asset_url }}'
  ];
  
  // Preload all images
  const preloadedImages = [];
  slides.forEach(function(src) {
    const preloadImg = new Image();
    preloadImg.src = src;
    preloadedImages.push(preloadImg);
  });
  
  let currentIndex = 0;
  let slideshowStarted = false;
  
  function changeSlide() {
    img.style.opacity = '0';
    
    setTimeout(function() {
      currentIndex = (currentIndex + 1) % slides.length;
      img.src = slides[currentIndex];
      img.style.opacity = '1';
    }, 600);
  }
  
  // Wait for the animation to complete
  img.addEventListener('animationend', function() {
    if (!slideshowStarted) {
      slideshowStarted = true;
      // Remove animation and lock in the final state
      img.style.animation = 'none';
      img.style.opacity = '1';
      img.style.transform = 'translateY(0)';
      
      // Wait 7 seconds, then start cycling
      setTimeout(function() {
        changeSlide();
        setInterval(changeSlide, 7000);
      }, 7000);
    }
  });
})();
</script>