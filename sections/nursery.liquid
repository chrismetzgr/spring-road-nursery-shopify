<script>
(function() {
  const slides = [
    '{{ "slide-1.png" | asset_url }}',
    '{{ "slide-2.png" | asset_url }}',
    '{{ "slide-3.png" | asset_url }}',
    '{{ "slide-4.png" | asset_url }}',
    '{{ "slide-5.png" | asset_url }}',
    '{{ "slide-6.png" | asset_url }}',
    '{{ "slide-7.png" | asset_url }}',
    '{{ "slide-8.png" | asset_url }}',
    '{{ "slide-9.png" | asset_url }}',
    '{{ "slide-10.png" | asset_url }}',
  ];
  
  // Preload all images
  slides.forEach(function(src) {
    const img = new Image();
    img.src = src;
  });
  
  const images = document.querySelectorAll('.srn-nursery__hero-image');
  const img1 = images[0];
  const img2 = images[1];
  
  if (!img1 || !img2) return;
  
  let currentIndex = 1;
  let useFirstImage = false;
  let isFirstTransition = true;
  
  function crossfade() {
    if (!isFirstTransition) {
      currentIndex = (currentIndex + 1) % slides.length;
    }
    isFirstTransition = false;
    
    if (useFirstImage) {
      img1.src = slides[currentIndex];
      img1.style.opacity = '1';
      img2.style.opacity = '0';
    } else {
      img2.src = slides[currentIndex];
      img2.style.opacity = '1';
      img1.style.opacity = '0';
    }
    
    useFirstImage = !useFirstImage;
  }
  
  img1.addEventListener('animationend', function() {
    img1.style.animation = 'none';
    img1.style.opacity = '1';
    
    setTimeout(function() {
      crossfade();
      setInterval(crossfade, 5000);
    }, 3500);
  }, { once: true });
})();
</script>