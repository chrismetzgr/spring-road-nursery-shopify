<style>
/* ============================================
   GARDEN DESIGN PAGE STYLES
   ============================================ */

/* Base/Mobile Styles (Mobile-First Approach) */
.srn-garden-design {
  margin-top: 0;
  margin-bottom: 75px;
}

/* Hero Section */
.srn-garden-design__hero {
  max-height: 630px;
  width: 100%;
  display: flex;
  justify-content: center;
  opacity: 0;
  transform: translateY(30px);
  animation: srn-fadeInUp 0.5s ease-out forwards;
}

@keyframes srn-fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.srn-garden-design__hero-image {
  max-width: 1370px;
  width: 100%;
  height: auto;
}

/* Content Container */
.srn-garden-design__content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 25px;
  padding: 0 20px;
  color: var(--font-color-light-tertiary);
}

.srn-garden-design__content img {
  align-self: center;
  max-width: 90%;
  height: auto;
}

/* Section */
.srn-garden-design__section {
  max-width: 850px;
  width: 100%;
  margin: 25px auto 0;
  text-align: center;
}

/* Headings */
.srn-garden-design__heading {
  margin: 0;
}

.srn-garden-design__heading-image {
  max-height: 75px;
  width: auto;
  display: block;
  margin: 0 auto;
}

.srn-garden-design__heading-image--desktop {
  display: none;
}

.srn-garden-design__heading-image--mobile {
  display: inline-block;
  max-height: 150px;
}

/* Text Content */
.srn-garden-design__text {
  margin-top: 25px;
  font-size: 18px;
  line-height: 1.15;
}

.srn-garden-design__text p {
  margin: 0 0 1em 0;
}

.srn-garden-design__text p:last-child {
  margin-bottom: 0;
}

.srn-garden-design__email {
  color: var(--font-color-light-tertiary);
  text-decoration: underline;
  text-decoration-thickness: 1px;
  text-underline-offset: 3px;
}

/* ============================================
   DESKTOP BREAKPOINT (700px)
   ============================================ */
@media (min-width: 700px) {
  .srn-garden-design {
    margin-top: 50px;
    margin-bottom: 150px;
  }

  .srn-garden-design__section {
    margin-top: 100px;
  }

  .srn-garden-design__heading-image--desktop {
    display: inline-block;
  }

  .srn-garden-design__heading-image--mobile {
    display: none;
  }

  .srn-garden-design__text {
    margin-top: 50px;
    font-size: 25px;
  }
}
</style>