<style>
    /* Container */
    #garden-design {
        margin-top: 50px;
        margin-bottom: 150px;
    }

    /* Header image */
    #img-container {
        max-height: 630px;
        width: 100%;
        display: flex;
        justify-content: center;
    }
    
    #img-container img {
        max-width: 1370px;
        width: 100%;
    }

    /* Content */
    #garden-design-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin-top: 100px;
        padding: 0 20px;
        color: var(--font-color-light-tertiary);
    }

    #garden-design-content img {
        align-self: center;
        max-width: 100%;
        height: auto;
    }

    #garden-design-content a {
        font-size: 20px;
    }

    #garden-design-content div {
        margin-top: 100px;
    }

    /* Text images */
    img.text-image {
        height: 75px !important;
        width: auto;
    }

    .mobile-pic {
        display: none;
    }

    /* Text content */
    .text {
        max-width: 850px;
        width: 100%;
        margin-left: auto;
        margin-right: auto;
        margin-top: 50px;
        font-size: 25px;
        line-height: 1.15;
        text-align: center;
    }

    .garden-design-link {
        text-decoration: underline;
    }

    /* Navigation menu (if used) */
    .garden-design-menu {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        max-width: 700px;
        width: 100%;
        margin: 20px auto 0;
        padding: 0 20px;
        font-family: var(--font-family-secondary);
        font-size: 14px;
        text-transform: uppercase;
    }

    /* Responsive: Tablets and smaller (850px and below) */
    @media (max-width: 850px) {
        #garden-design {
            margin-top: calc(50px * (100vw / 850));
            margin-bottom: calc(150px * (100vw / 850));
        }

        #garden-design-content {
            margin-top: calc(100px * (100vw / 850));
        }

        #garden-design-content a {
            font-size: calc(20px * (100vw / 850));
        }

        #garden-design-content div {
            margin-top: calc(100px * (100vw / 850));
        }

        img.text-image {
            height: calc(75px * (100vw / 850)) !important;
        }

        .text {
            margin-top: calc(50px * (100vw / 850));
            font-size: calc(25px * (100vw / 850));
        }

        .garden-design-menu {
            margin-top: calc(20px * (100vw / 850));
            font-size: calc(14px * (100vw / 850));
        }
    }

    /* Mobile: Show/hide elements */
    @media (max-width: 768px) {
        .garden-design-menu div:last-child {
            display: none;
        }

        .mobile-pic {
            display: inline-block;
        }
        
        .desktop-pic { 
            display: none;
        }
    }
</style>