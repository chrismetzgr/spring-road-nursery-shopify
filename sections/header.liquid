  .sn-header .menu a:visited{
    color: var(--font-color-dark) !important;
  }
  .garden-design-header .menu a,
  .garden-design-header .menu a:visited{
    color: var(--font-color-light-quaternary) !important;
  }
  .nursery-header .menu a,
