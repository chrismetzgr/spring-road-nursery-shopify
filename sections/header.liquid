{% render 'mobile-nav' %}
{% render 'mobile-sort' %}
{% if page.handle == 'nursery' %}
  {% assign header_image = 'SRN-LOGO-BLACK.png' %}
{% elsif page.handle == 'garden-design' %}
  {% assign header_image = 'SRN-LOGO-LIGHT-GREEN.png' %}
{% else %}
    {% assign header_image = 'SRN-GREEN.png' %}
{% endif %}
{% if page.handle == 'nursery' %}
  {% assign hamburger = 'hamburger.png' %}
{% elsif page.handle == 'garden-design' %}
  {% assign hamburger = 'hamburger-light-green.png' %}
{% else %}
    {% assign hamburger = 'hamburger-dark-green.png' %}
{% endif %}
<div class="sn-header {% if page.handle == 'nursery' %}nursery-header{% elsif page.handle == 'garden-design' %}garden-design-header{% endif %}">
  <div class="content">
    <div class="side">
      <img class="mobile" id="hamburger-icon"src="{{ hamburger | asset_url }}" height="auto" width="auto"/>
    </div>
    <div class="main">
      <a href="{{ routes.root_url }}">
        <img id="logo" src="{{ header_image | asset_url }}" height="auto" width="auto"/>
      </a>
      <div class="menu">
        <div><a href="{{ collections['web-shop'].url }}" class="{% if template == 'collection' or template == 'product' %}wavy-underline{% endif %}">THE SHOP</a></div>
        <div><a href="/pages/nursery" class="{% if page.handle == 'nursery' %}wavy-underline{% endif %}">THE NURSERY</a></div>
        <div><a href="/pages/garden-design" class="{% if page.handle == 'garden-design' %}wavy-underline{% endif %}">GARDEN DESIGN</a></div>
      </div>
    </div>
    <div class="side">
      <div class="sort-container {% if template != 'collection' %}hide{% endif %}">
          <img id="sort-icon" src="{{ 'WormFilterIcon.png' | asset_url }}" height="auto" width="auto"/>
          <div id="sort-menu" class="sort-dropdown">
            <span data-sort="featured">Featured</span>
            <span data-sort="best-selling">Best Selling</span>
            <span data-sort="price">Price</span>
            <span data-sort="newest">Newest</span>
          </div>
        </div>
        <div id="header-cart"><a href="{{ routes.cart_url }}"><div class="srn-cart {% if cart == empty %}hidden{% endif %}">CART {{ cart.item_count }}</div></a>
      </div>
    </div>
  </div>
</div>
<script src="{{ 'menu-sort.js' | asset_url }}" defer="defer"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
  updateCartVisibility();
});

function updateCartVisibility() {
  fetch('/cart.js')
    .then(response => response.json())
    .then(cart => {
      const itemCount = cart.item_count;
      const cartElements = document.querySelectorAll('.srn-cart');
      
      cartElements.forEach(cartElement => {
        if (itemCount > 0) {
          cartElement.textContent = `CART ${itemCount}`;
          cartElement.style.display = 'block';
        }
      });
    })
    .catch(error => console.error('Error fetching cart:', error));
}
</script>
