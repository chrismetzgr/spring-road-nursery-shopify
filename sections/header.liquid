{% render 'mobile-nav' %}
{% render 'mobile-filter' %}
<div class="sn-header">
  <div class="content">
    <div class="side">
      <img class="mobile" id="hamburger-icon"src="{{ 'Hamburger.png' | asset_url }}" height="auto" width="auto"/>
    </div>
    <div class="main">
      <a href="{{ routes.root_url }}">
        <img id="logo" src="{{ 'SRN-BLACK-1.png' | asset_url }}" height="auto" width="auto"/>
      </a>
      <div class="menu">
        <div><a href="{{ collections['web-shop'].url }}" class="{% if template == 'collection' or template == 'product' %}wavy-underline{% endif %}">THE SHOP</a></div>
        <div><a href="/pages/nursery" class="{% if page.handle == 'nursery' %}wavy-underline{% endif %}">THE NURSERY</a></div>
        <div><a href="/pages/garden-design" class="{% if page.handle == 'garden-design' %}wavy-underline{% endif %}">GARDEN DESIGN</a></div>
      </div>
    </div>
    <div class="side">
      {% if template == 'collection' %}
        <img id="filter-icon" src="{{ 'WormFilterIcon.png' | asset_url }}" height="auto" width="auto"/>
        <div id="filter-menu" class="filter-dropdown">
          <span data-filter="featured">Featured</span>
          <span data-filter="best-selling">Best Selling</span>
          <span data-filter="price">Price</span>
          <span data-filter="newest">Newest</span>
        </div>
        {% if cart.item_count != 0 %} <a href="{{ routes.cart_url }}"><div id="srn-cart">CART {{ cart.item_count }}</div></a>{%  endif %}
      {% endif %}
    </div>
  </div>
</div>
<script src="{{ 'menu-filter.js' | asset_url }}" defer="defer"></script>
<style>
  @font-face {
    font-family: "Akzidenz-Grotesk Pro";
    src: url('{{ "akzidenzgroteskpro_ext.otf" | asset_url }}') format('opentype');
    font-weight: normal;
    font-style: normal;
  }
  a {
    text-decoration: none;
    color: #3B5669;
  }
  a:visited {
    color: #3B5669;
  }
  #logo {
    height: 180px;
    margin: 25px 0px;
  }
  #filter {
    margin-top: 10px;
  }
  #menu-icon {
    margin-top: 10px;
  }
  .content {
    font-family: var(--font-secondary-family);
    max-width: 1200px;
    width: 100%;
    min-width: 768px;
    margin-left: auto;
    margin-right: auto;
    display: flex;
  }
  .filter-dropdown {
    position: absolute;
    min-width: 170px;
    max-width: 275px;
    background: white;
    border: 1px solid #3B5669;
    border-radius: 4px;
    padding: 10px 0;
    margin-top: 10px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: opacity 0.3s ease, transform 0.3s ease, visibility 0.3s;
    z-index: 1000;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .filter-dropdown.active {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .filter-dropdown span {
    padding: 8px 20px;
    font-size: 14px;
    color: #3B5669;
    cursor: pointer;
    transition: background-color 0.2s ease;
    font-family: var(--font-secondary-family);
  }

  .filter-dropdown span:hover {
    background-color: #f5f5f5;
  }

  /* Update the .side class to position the dropdown */
  .side {
    min-width: 20%;
    max-width: 275px;
    min-height: 1px;
    display: flex;
    flex-direction: column-reverse;
    align-items: center;
    gap: 100px;
    position: relative; /* Add this */
  }

  @media (max-width: 850px) {
    .filter-dropdown {
      min-width: 150px;
      max-width: 200px;
    }
  }
  .main {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }
  .sn-header {
    width: 100vw;
  }
  #srn-cart {
    color: #3B5669;
    font-size: 15px
  }
  .menu {
    font-size: 14px;
    max-width: 768px;
    width: 80%;
    height: 50px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
  }

  .side:first-child {
    display: flex !important;
  }

  .mobile {
    display: none;
  }

  #hamburger-icon {
    height: 20px
  }

  #filter-icon {
    height: 60px
    a:hover {
      cursor: pointer;
    }
  }

  @media (max-width: 850px) {
    #logo {
      height: 90px;
      margin: 25px 0px;
    }
    
    #hamburger-icon {
      height: 20px
    }
    
    #filter-icon {
      height: 45px
    }

    .content {
      min-width: auto;
      padding: 0 20px;
      align-items: center;
    }

    .side {
      min-width: auto;
      max-width: none;
      width: 60px;
      gap: 0px;
    }
    
    .menu {
      display: none;
    }

    .mobile {
      display: block;
    }

    #srn-cart {
      display: none;}
    }
</style>