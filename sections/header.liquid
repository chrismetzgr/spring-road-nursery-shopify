{% render 'mobile-nav' %}
{% render 'mobile-sort' %}

{% comment %}
  Determine theme variant based on current page
  - nursery: black theme
  - garden-design: light green theme
  - default: dark green theme
{% endcomment %}
{% liquid
  case page.handle
    when 'nursery'
      assign theme_variant = 'nursery'
      assign logo_image = 'SRN-LOGO-BLACK.png'
      assign hamburger_image = 'hamburger.png'
    when 'garden-design'
      assign theme_variant = 'garden-design'
      assign logo_image = 'SRN-LOGO-LIGHT-GREEN.png'
      assign hamburger_image = 'hamburger-light-green.png'
    else
      assign theme_variant = 'default'
      assign logo_image = 'SRN-GREEN.png'
      assign hamburger_image = 'hamburger-dark-green.png'
  endcase
%}

<header class="srn-header srn-header--{{ theme_variant }}" role="banner">
  <div class="srn-header__container">
    
    <!-- Left Side: Mobile Menu Toggle -->
    <div class="srn-header__side srn-header__side--left">
      <button 
        id="hamburger-icon" 
        class="srn-header__hamburger" 
        aria-label="Open navigation menu"
        aria-expanded="false"
      >
        <img 
          src="{{ hamburger_image | asset_url }}" 
          alt=""
          aria-hidden="true"
          width="20" 
          height="20"
        />
      </button>
    </div>

    <!-- Center: Logo and Navigation -->
    <div class="srn-header__main">
      <a href="{{ routes.root_url }}" class="srn-header__logo-link" aria-label="Spring Road Nursery home">
        <img 
          id="logo" 
          class="srn-header__logo" 
          src="{{ logo_image | asset_url }}" 
          alt="Spring Road Nursery"
          width="220" 
          height="220"
        />
      </a>
      
      <nav class="srn-header__nav" aria-label="Main navigation">
        <a 
          href="{{ collections['web-shop'].url }}" 
          class="srn-header__nav-link {% if template == 'collection' or template == 'product' %}wavy-underline{% endif %}"
        >
          THE SHOP
        </a>
        <a 
          href="/pages/nursery" 
          class="srn-header__nav-link {% if page.handle == 'nursery' %}wavy-underline{% endif %}"
        >
          THE NURSERY
        </a>
        <a 
          href="/pages/garden-design" 
          class="srn-header__nav-link {% if page.handle == 'garden-design' %}wavy-underline{% endif %}"
        >
          GARDEN DESIGN
        </a>
      </nav>
    </div>

    <!-- Right Side: Sort and Cart -->
    <div class="srn-header__side srn-header__side--right">
      
      <!-- Sort Dropdown -->
      <div class="srn-header__sort {% unless template == 'collection' %}srn-header__sort--hidden{% endunless %}">
        <button 
          id="sort-icon" 
          class="srn-header__sort-toggle"
          aria-label="Sort products"
          aria-expanded="false"
          aria-controls="sort-menu"
        >
          <img 
            src="{{ 'WormFilterIcon.png' | asset_url }}" 
            alt=""
            aria-hidden="true"
            width="60" 
            height="60"
          />
        </button>
        <div id="sort-menu" class="srn-header__sort-dropdown" role="menu">
          <span data-sort="featured" role="menuitem" tabindex="0">Featured</span>
          <span data-sort="best-selling" role="menuitem" tabindex="0">Best Selling</span>
          <span data-sort="price-low" role="menuitem" tabindex="0">Price: Low to High</span>
          <span data-sort="price-high" role="menuitem" tabindex="0">Price: High to Low</span>
          <span data-sort="newest" role="menuitem" tabindex="0">Newest</span>
        </div>
      </div>

      <!-- Cart Link (Hidden on mobile collection pages) -->
      <div id="header-cart" class="srn-header__cart-wrapper {% if template == 'collection' %}srn-header__cart-wrapper--hide-mobile{% endif %}">
        <a href="{{ routes.cart_url }}" class="srn-header__cart-link" aria-label="Shopping cart">
          <span class="srn-header__cart {% if cart == empty %}srn-header__cart--hidden{% endif %}">
            CART {{ cart.item_count }}
          </span>
        </a>
      </div>
      
    </div>
  </div>
</header>

<script src="{{ 'menu-sort.js' | asset_url }}" defer="defer"></script>
<script>
  /**
   * Update cart visibility and count
   */
  document.addEventListener('DOMContentLoaded', function() {
    updateCartVisibility();
  });

  function updateCartVisibility() {
    fetch('/cart.js')
      .then(response => response.json())
      .then(cart => {
        const itemCount = cart.item_count;
        const cartElements = document.querySelectorAll('.srn-header__cart');
        
        cartElements.forEach(cartElement => {
          if (itemCount > 0) {
            cartElement.textContent = `CART ${itemCount}`;
            cartElement.classList.remove('srn-header__cart--hidden');
          } else {
            cartElement.classList.add('srn-header__cart--hidden');
          }
        });
      })
      .catch(error => console.error('Error fetching cart:', error));
  }
</script>

<style>
/* ============================================
   HEADER STYLES
   ============================================ */

/* Reset link styles */
a {
  text-decoration: none;
}

/* Base Styles */
.srn-header {
  width: 100vw;
}

.srn-header__container {
  font-family: var(--font-family-secondary);
  max-width: 1200px;
  width: 100%;
  min-width: 768px;
  margin: 0 auto;
  display: flex;
}

/* Logo */
.srn-header__logo-link {
  display: inline-block;
}

.srn-header__logo {
  height: 220px;
  width: auto;
  display: block;
}

/* Main Center Section */
.srn-header__main {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

/* Navigation */
.srn-header__nav {
  font-size: 14px;
  font-stretch: expanded;
  font-weight: 400;
  max-width: 768px;
  width: 80%;
  height: 50px;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

/* Side Sections */
.srn-header__side {
  min-width: 20%;
  max-width: 275px;
  min-height: 1px;
  display: flex;
  flex-direction: column-reverse;
  align-items: center;
  gap: 100px;
  position: relative;
}

.srn-header__side--left {
  display: flex;
}

/* Hamburger Menu (Mobile Only) */
.srn-header__hamburger {
  display: none;
  background: none;
  border: none;
  padding: 0;
  cursor: pointer;
}

.srn-header__hamburger img {
  height: 20px;
  width: auto;
}

/* Sort Dropdown */
.srn-header__sort {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.srn-header__sort--hidden {
  visibility: hidden;
  pointer-events: none;
}

.srn-header__sort-toggle {
  background: none;
  border: none;
  padding: 0;
  cursor: pointer;
}

.srn-header__sort-toggle img {
  height: 60px;
  width: auto;
}

.srn-header__sort-dropdown {
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%) translateY(-10px);
  min-width: 360px;
  max-width: 360px;
  background-color: var(--color-background);
  border-radius: 20px;
  padding: 10px 0;
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, transform 0.3s ease, visibility 0.3s;
  z-index: 1000;
  font-weight: 700;
  letter-spacing: 3px;
}

.srn-header__sort-dropdown.active {
  opacity: 1;
  visibility: visible;
  transform: translateX(-50%) translateY(0);
}

.srn-header__sort-dropdown span {
  text-transform: uppercase;
  font-size: 12px;
  cursor: pointer;
  color: var(--font-color-dark);
  font-family: var(--font-family-secondary);
  transition: opacity 0.2s ease;
}

.srn-header__sort-dropdown span:hover,
.srn-header__sort-dropdown span:focus {
  opacity: 0.5;
}

/* Spacer to hold space for sort filter when absent */
.srn-header__sort-spacer {
  height: 60px;
  width: 60px;
  flex-shrink: 0;
}

/* Cart */
.srn-header__cart-wrapper {
  display: block;
}

.srn-header__cart-link {
  text-decoration: none;
}

.srn-header__cart {
  font-size: 15px;
}

.srn-header__cart--hidden {
  display: none;
}

/* ============================================
   THEME VARIANTS
   ============================================ */

/* Default Theme */
.srn-header .srn-header__nav-link,
.srn-header .srn-header__nav-link:visited {
  color: var(--font-color-dark);
}

.srn-header__nav-link {
  transition: opacity 0.2s ease;
}

.srn-header__nav-link:hover,
.srn-header__nav-link:focus {
  opacity: 0.5;
}

.srn-header .srn-header__cart {
  color: var(--font-color-dark);
}

/* Nursery Theme */
.srn-header--nursery .srn-header__nav-link,
.srn-header--nursery .srn-header__nav-link:visited {
  color: var(--font-color-dark-secondary);
}

.srn-header--nursery .srn-header__cart {
  color: var(--font-color-dark-secondary);
}

/* Garden Design Theme */
.srn-header--garden-design .srn-header__nav-link,
.srn-header--garden-design .srn-header__nav-link:visited {
  color: var(--font-color-light-quaternary);
}

.srn-header--garden-design .srn-header__cart {
  color: var(--font-color-light-quaternary);
}

/* ============================================
   TABLET/MOBILE BREAKPOINT (â‰¤850px)
   ============================================ */
@media (max-width: 850px) {
  .srn-header__container {
    min-width: auto;
    padding: 0 20px;
    align-items: center;
  }

  .srn-header__logo {
    height: 150px;
  }

  .srn-header__side {
    min-width: auto;
    max-width: none;
    width: 60px;
    gap: 0;
  }

  /* Show hamburger on mobile */
  .srn-header__hamburger {
    display: block;
  }

  /* Hide desktop navigation */
  .srn-header__nav {
    display: none;
  }

  /* Hide spacer on mobile */
  .srn-header__sort-spacer {
    display: none;
  }

  /* Show sort filter on mobile collection pages */
  .srn-header__sort--hidden {
    display: none;
  }

  /* Adjust sort dropdown */
  .srn-header__sort-toggle img {
    height: 45px;
  }

  .srn-header__sort-dropdown {
    min-width: 150px;
    max-width: 200px;
  }

  /* Hide cart on mobile collection pages */
  .srn-header__cart-wrapper--hide-mobile {
    display: none;
  }
}
</style>