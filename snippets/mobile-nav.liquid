  display: flex;
  flex-direction: column;
  position: relative;
}

.mobile-nav-exit-container {
  position: absolute;
  top: 20px;
  right: 20px;
  z-index: 10;
}

.mobile-nav-exit-container img {
  margin: 0;
}

.mobile-nav-exit-container img:hover {
  cursor: pointer;
}

#mobile-menu {
  flex: 1;
  font-family: var(--font-family-secondary);
