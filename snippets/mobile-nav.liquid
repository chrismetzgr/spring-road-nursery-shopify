<link rel="preload" as="image" href="{{ "mobile-menu-background.png" | asset_url }}">
<div id="mobile-nav">
    <div class="exit-container">
      <img src="{{ "exit.png" | asset_url }}" height="20px" width="20px"/>
    </div>
    <div id="mobile-menu">
        <div><a href="{{ collections['web-shop'].url }}" class="{% if template == 'collection' or template == 'product' %}wavy-underline{% endif %}">THE SHOP</a></div>
        <div><a href="/pages/nursery" class="{% if page.handle == 'nursery' %}wavy-underline{% endif %}">THE NURSERY</a></div>
        <div><a href="/pages/garden-design" class="{% if page.handle == 'garden-design' %}wavy-underline{% endif %}">GARDEN DESIGN</a></div>
    </div>
  </div>
<style>
  #mobile-nav {
    display: none;
    position: fixed;
    inset: 0;
    padding-top: env(safe-area-inset-top);
    padding-bottom: env(safe-area-inset-bottom);
    top: 0;
    left: 0;
    width: 100vw;
    background-image: url('{{ "mobile-menu-background.png" | asset_url }}');
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: center;
    z-index: 2000;
    overflow: hidden;
    
    .exit-container {
      direction: rtl;
      img {
        margin: 20px 20px 0 0;
      }
      img:hover {
        cursor:pointer;
      }
    }

   #mobile-menu {
      height: 100%;
      font-family: var(--font-family-secondary);
      font-size: 20px;
      gap: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding-bottom: 100px;

      a {
        color: var(--font-color-light-secondary);
      }
      a:visited {
        color: var(--font-color-light-secondary);
      }
    }
  }

  #mobile-nav.show {
    display: block;
    animation: slideInLeft 0.5s ease-out forwards;
  }

  #mobile-nav.hide {
    animation: slideOutLeft 0.5s ease-out;
  }

@keyframes slideInLeft {
  from {
    transform: translateX(-100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

@keyframes slideOutLeft {
  from {
    transform: translateX(0);
    opacity: 1;
  }
  to {
    transform: translateX(-100%);
    opacity: 0;
  }
}
</style>