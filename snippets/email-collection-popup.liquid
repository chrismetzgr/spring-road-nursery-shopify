  }

  .srn-email-popup__content {
    margin-top: 50px;
    gap: 20px;
  }

  .srn-email-popup__title {
    font-size: 32px;
    letter-spacing: 2px;
  }

  .srn-email-popup__text {
    font-size: 16px;
    letter-spacing: 3px;
  }

  .srn-email-popup .svg-wrapper,
  .srn-email-popup .newsletter-label {
    font-size: 16px;
  }
