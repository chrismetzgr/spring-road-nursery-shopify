/* Alternating radius effect for 3-column grid */

/* First row pattern: X O X (top, bottom, top) */
.card-wrapper:nth-child(6n+1) .card:hover,
.card-wrapper:nth-child(6n+1) .card__media:hover {
  border-radius: 20px 20px 0 0; /* Top corners */
}

.card-wrapper:nth-child(6n+2) .card:hover,
.card-wrapper:nth-child(6n+2) .card__media:hover {
  border-radius: 0 0 20px 20px; /* Bottom corners */
}

.card-wrapper:nth-child(6n+3) .card:hover,
.card-wrapper:nth-child(6n+3) .card__media:hover {
  border-radius: 20px 20px 0 0; /* Top corners */
}

/* Second row pattern: O X O (bottom, top, bottom) */
.card-wrapper:nth-child(6n+4) .card:hover,
.card-wrapper:nth-child(6n+4) .card__media:hover {
  border-radius: 0 0 20px 20px; /* Bottom corners */
}

.card-wrapper:nth-child(6n+5) .card:hover,
.card-wrapper:nth-child(6n+5) .card__media:hover {
  border-radius: 20px 20px 0 0; /* Top corners */
}

.card-wrapper:nth-child(6n+6) .card:hover,
.card-wrapper:nth-child(6n+6) .card__media:hover {
  border-radius: 0 0 20px 20px; /* Bottom corners */
}

/* Add smooth transition for the effect */
.card-wrapper .card,
.card-wrapper .card__media {
  transition: border-radius 0.3s ease;
  overflow: hidden;
}

/* Optional: Also apply to the image inside for better effect */
.card-wrapper .card:hover img,
.card-wrapper .card__media:hover img {
  transition: border-radius 0.3s ease;
}